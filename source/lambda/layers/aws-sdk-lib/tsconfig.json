{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "aws-node-user-agent-config": [
        "../aws-node-user-agent-config/dist"
      ]
    }
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "dist"]
}
